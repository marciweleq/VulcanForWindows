<Page
    x:Class="VulcanForWindows.MessagesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VulcanForWindows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:converters="using:Converters"
    xmlns:messages="using:Vulcanova.Features.Messages"
    >

    <Page.Resources>
        <converters:VisibilityConverter x:Key="VisibilityConverter"/>
        <DataTemplate x:Key="MessagePopupContent" x:DataType="local:MessageViewModel">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel>
                <TextBlock Text="{x:Bind message.Subject}" FontWeight="SemiBold" FontSize="22" Margin="0,0,0,20"/>
                <TextBlock Foreground="LightGray">
                    <Run Text="Od:"/>
                    <Run Text="{x:Bind message.Sender.Name}"/>
                </TextBlock>
                <TextBlock Foreground="LightGray">
                    <Run Text="Do:"/>
                    <Run Text="{x:Bind Receivers}"/>
                </TextBlock>
                <TextBlock Foreground="LightGray">
                    <Run Text="Data:"/>
                    <Run Text="{x:Bind message.DateSent}"/>
                </TextBlock>
                <TextBlock Foreground="LightGray">
                    <Run Text="Przeczytana:"/>
                    <Run Text="{x:Bind IsRead}"/>
                </TextBlock>
                </StackPanel>
                
                <ListView SelectionMode="None" Grid.Row="1">
                    <TextBlock Text="{x:Bind DisplayContent}" TextWrapping="WrapWholeWords"/>
                </ListView>

            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" Spacing="5" Margin="31,0,31,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="15"/>
                </Grid.ColumnDefinitions>
                <CheckBox Width="30" Content="" IsChecked="{x:Bind MainCheckBoxChecked, Mode=OneWay}" 
                          Checked="MainChecked" Unchecked="MainUnchecked"/>
                <Button Grid.Column="1" Content="m" 
                        Padding="0" VerticalAlignment="Center" Height="25" HorizontalAlignment="Left">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Wszystkie" Click="SelectAll"/>
                            <MenuFlyoutItem Text="Żadne" Click="UnselectAll"/>
                            <MenuFlyoutItem Text="Przeczytane" Click="SelectRead"/>
                            <MenuFlyoutItem Text="Nieprzeczytane" Click="SelectUnread"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </Grid>

            <Button Width="35" Height="35" Padding="0">
                <SymbolIcon Symbol="Refresh" />
            </Button>
            <Button Width="35" Height="35" Padding="0">
                <SymbolIcon Symbol="More" />

                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="Oznacz wszystkie jako przeczytane"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </StackPanel>

        <ListView ItemsSource="{x:Bind Received, Mode=OneWay}" IsItemClickEnabled="True" SelectionMode="None" Grid.Row="1" Margin="0,10,0,0" ItemClick="ListView_ItemClick">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:MessageViewModel">
                    <ListViewItem Padding="15" PointerEntered="Grid_PointerEntered" PointerExited="Grid_PointerExited">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox IsChecked="{x:Bind IsSelected, Mode=TwoWay}" VerticalAlignment="Center"/>
                        <TextBlock Text="{x:Bind message.Sender.Name}"
                               TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"
                               FontWeight="Medium" FontSize="16" VerticalAlignment="Center" Grid.Column="1"/>
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{x:Bind message.Subject}" VerticalAlignment="Center" FontWeight="Bold"/>
                            <TextBlock Text="|" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1"/>
                            <TextBlock Text="{x:Bind PlainContent}" 
                                   VerticalAlignment="Center" Grid.Column="2"
                                   TextTrimming="CharacterEllipsis" />

                        </Grid>
                        <StackPanel Orientation="Horizontal" Grid.Column="3" Padding="10,0,0,0" Spacing="5">
                            <TextBlock Text="{x:Bind message.DateSent}" HorizontalAlignment="Right" VerticalAlignment="Center"
                                       Visibility="{x:Bind Hover, Mode=OneWay, Converter={StaticResource VisibilityConverter},ConverterParameter=True}"/>
                                <Button HorizontalAlignment="Right" VerticalAlignment="Center"
                                       Visibility="{x:Bind Hover, Mode=OneWay, 
                                    Converter={StaticResource VisibilityConverter},ConverterParameter=False}"
                                        Width="32" Height="32" Padding="0">
                                    <SymbolIcon Symbol="Delete" />
                                </Button>
                            <Button HorizontalAlignment="Right" VerticalAlignment="Center"
                                       Visibility="{x:Bind Hover, Mode=OneWay, 
                                    Converter={StaticResource VisibilityConverter},ConverterParameter=False}"
                                        Width="32" Height="32" Padding="0">
                                    <SymbolIcon Symbol="Read" />
                                </Button>
                            </StackPanel>
                    </Grid>
                    </ListViewItem>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
